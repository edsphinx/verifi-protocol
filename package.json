{
  "name": "verifi-protocol",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "// === DATABASE ===": "",
    "postinstall": "prisma generate",
    "db:seed": "ts-node --project tsconfig.scripts.json prisma/seed.ts",
    "db:sync": "ts-node --project tsconfig.scripts.json scripts/db-sync.ts",
    "// === PUBLISH (Move Modules) ===": "",
    "move:compile": "ts-node --project tsconfig.scripts.json scripts/move/util-compile.ts",
    "move:publish": "pnpm move:compile && ts-node --project tsconfig.scripts.json scripts/move/publish-verifi.ts",
    "move:publish-tapp": "ts-node --project tsconfig.scripts.json scripts/move/util-compile-tapp.ts && ts-node --project tsconfig.scripts.json scripts/move/publish-tapp.ts",
    "move:publish-hooks": "ts-node --project tsconfig.scripts.json scripts/move/publish-hooks.ts",
    "move:publish-all": "ts-node --project tsconfig.scripts.json scripts/move/publish-all.ts",
    "// === TESTING ===": "",
    "test:full-flow": "ts-node --project tsconfig.scripts.json scripts/move/test-full-flow.ts",
    "test:trade-flow": "ts-node --project tsconfig.scripts.json scripts/move/test-trade-flow.ts",
    "test:oracle-flow": "ts-node --project tsconfig.scripts.json scripts/move/test-oracle-flow.ts",
    "test:oracle-integration": "ts-node --project tsconfig.scripts.json scripts/move/test-oracle-integration.ts",
    "test:tapp-amm": "ts-node --project tsconfig.scripts.json scripts/move/test-tapp-amm.ts",
    "test:tapp-integration": "ts-node --project tsconfig.scripts.json scripts/move/test-tapp-integration.ts",
    "// === SETUP & CONFIGURATION ===": "",
    "setup:oracles": "ts-node --project tsconfig.scripts.json scripts/move/setup-register-oracles.ts",
    "setup:tapp-oracle": "ts-node --project tsconfig.scripts.json scripts/move/setup-register-tapp-oracle.ts",
    "// === UTILITIES ===": "",
    "util:generate-abis": "ts-node --project tsconfig.scripts.json scripts/move/util-generate-abis.ts && pnpm format",
    "util:generate-abis-tapp": "ts-node --project tsconfig.scripts.json scripts/move/util-generate-abis-tapp.ts && pnpm format",
    "util:populate-markets": "ts-node --project tsconfig.scripts.json scripts/move/util-populate-markets.ts",
    "util:cleanup-balances": "ts-node --project tsconfig.scripts.json scripts/move/util-cleanup-balances.ts",
    "// === DEBUG ===": "",
    "debug:advanced": "ts-node --project tsconfig.scripts.json scripts/move/debug-advanced.ts",
    "debug:market-registry": "ts-node --project tsconfig.scripts.json scripts/move/debug-market-registry.ts",
    "debug:usdc-oracle": "ts-node --project tsconfig.scripts.json scripts/move/debug-usdc-oracle.ts",
    "debug:resolution": "ts-node --project tsconfig.scripts.json scripts/move/debug-resolution.ts",
    "// === NEXT.JS ===": "",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "dependencies": {
    "@aptos-labs/aptos-client": "^2.0.0",
    "@aptos-labs/ts-sdk": "^5.1.0",
    "@aptos-labs/wallet-adapter-react": "^7.1.0",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.2",
    "cacheable-request": "^13.0.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.19",
    "got": "^11.8.6",
    "keyv": "^5.5.2",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.22",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "toml": "^3.0.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "ts-node --project tsconfig.scripts.json prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "pnpm format"
    ]
  },
  "pnpm": {
    "overrides": {
      "aptos": "npm:@aptos-labs/ts-sdk@^5.1.0",
      "got": "^11.8.6"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "prisma",
      "sharp"
    ]
  }
}
