{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "scripts/move/test-wallet-adapter-siwa.ts",
    "scripts/move/test-auth-flow.ts",
    "scripts/move/cleanup-session.ts",
    "services/auth.service.ts",
    "app/api/auth/**/*",
    "app/auth-test/**/*",
    "app/approval-test/**/*",
    "lib/auth/**/*",
    "lib/hooks/use-auth.ts",
    "lib/hooks/use-siwa-auth.ts",
    "lib/hooks/use-session-auth.ts",
    "lib/hooks/use-session-transaction.ts",
    "lib/hooks/use-ephemeral-keypair.ts",
    "components/UnifiedAuthButton.tsx",
    "components/ApprovalMockupTest.tsx",
    "components/SessionKeyMockupTest.tsx"
  ]
}
