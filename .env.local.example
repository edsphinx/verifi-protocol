# VeriFi Protocol Environment Variables

# Aptos Network (testnet, mainnet, devnet)
NEXT_PUBLIC_NETWORK=testnet

# Nodit API Key for event indexing
NODIT_API_KEY=your_nodit_api_key_here

# Module Address (where your contracts are deployed)
NEXT_PUBLIC_MODULE_ADDRESS=0xYOUR_MODULE_ADDRESS_HERE

# Tapp Hook Address (tapp_prediction_hook module)
NEXT_PUBLIC_TAPP_HOOK_ADDRESS=0xYOUR_TAPP_HOOK_ADDRESS_HERE

# Tapp Protocol Address (main Tapp.Exchange protocol)
NEXT_PUBLIC_TAPP_PROTOCOL_ADDRESS=0xTAPP_PROTOCOL_ADDRESS_HERE

# Database (Supabase/Postgres)
DATABASE_URL="postgresql://..."
DIRECT_URL="postgresql://..."

# Aptos API Key (optional, for better rate limits)
APTOS_API_KEY=your_aptos_api_key_here

# ============================================================================
# AUTHENTICATION (SIWA + Passkeys)
# ============================================================================

# JWT/JWE Secret (CRITICAL: Change in production!)
# Must be 32+ characters for AES-256-GCM encryption
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production-must-be-32-bytes-minimum

# Session Configuration
SESSION_MAX_AGE=86400  # 24 hours in seconds

# ============================================================================
# VPS DEPLOYMENT (Microservices)
# ============================================================================

# VPS Server Details
VERIFI_VPS_ADDRESS=198.144.183.32
VERIFI_VPS_ROOT_PASS=your_vps_password_here

# ============================================================================
# API KEY ROTATION (for rate limit avoidance)
# ============================================================================

# Aptos API Keys (comma-separated, 4 recommended)
# Create multiple accounts at https://developers.aptoslabs.com
# Example: key1,key2,key3,key4
APTOS_API_KEYS=

# Nodit API Keys (comma-separated, 4 recommended)
# Create multiple accounts at https://nodit.io
# Example: nodit_key1,nodit_key2,nodit_key3,nodit_key4
NODIT_API_KEYS=

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# App Domain (for SIWA domain binding)
NEXT_PUBLIC_APP_DOMAIN=localhost:3000

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
